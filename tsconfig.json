{
    "compilerOptions": {
      "lib": ["es5", "es6"],
      "target": "es5",
      "module": "commonjs",
      "moduleResolution": "node",
      "outDir": "./build",
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "sourceMap": true,
      "resolveJsonModule": true,
      "types": ["reflect-metadata", "jest"],
      "skipLibCheck": true,
      "esModuleInterop": true
    }
  }